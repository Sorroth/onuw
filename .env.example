# =============================================================================
# ONUW Environment Configuration
# =============================================================================
# Copy this file to .env (development) or .env.production (production)
# Generate secrets with: openssl rand -base64 32
# =============================================================================

# -----------------------------------------------------------------------------
# Domain Configuration (production only)
# -----------------------------------------------------------------------------
# DOMAIN=game.example.com
# FRONTEND_URL=https://game.example.com
# BACKEND_URL=https://game.example.com
# WS_URL=wss://game.example.com/ws

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_USER=onuw
POSTGRES_PASSWORD=onuw_secret_password
POSTGRES_DB=onuw
DATABASE_URL=postgresql://onuw:onuw_secret_password@postgres:5432/onuw
DATABASE_POOL_SIZE=10

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Generate with: openssl rand -base64 32
JWT_SECRET=change-this-in-production-to-a-secure-random-string
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# NextAuth (frontend)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=change-this-in-production
NEXTAUTH_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# OAuth Providers (optional)
# -----------------------------------------------------------------------------
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Discord OAuth - https://discord.com/developers/applications
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# SSL Configuration (production only)
# -----------------------------------------------------------------------------
# SSL_EMAIL=your-email@example.com

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=debug
